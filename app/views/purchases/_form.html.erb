<%= form_for @purchase, remote: true, html: { style: "display:inline;" } do |f| %>

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon2">Customer Name:</span>
          <%= f.select( :customer_name,  Customer.all.map {|u| [u.customer_name]}, {:include_blank => true}, {class: "form-control"}) %>
      </div><br>
<div class="input-group">
  <span class="input-group-addon" id="basic-addon2">Product Name:</span>
  <%= f.select(:product_name, options_for_select(["Air Conditioner"]), {}, {class: "form-control"}) %>
    </div><br>
<div class="input-group">
  <span class="input-group-addon" id="basic-addon2">Product Model:</span>
    <%= f.select( :product_model,  Product.all.map {|a| [a.product_model]}, {:include_blank => true}, {class: "form-control"}) %>
    </div><br>
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon2">Price $:</span>
      <%= f.number_field :price, class: "form-control" %>
    </div><br>
<div class="input-group">
  <span class="input-group-addon" id="basic-addon2">Purchase Date:</span>
    <%= f.date_select :purchase_date, class: "form-control" %>
    </div><br>
<div class="input-group">
  <span class="input-group-addon" id="basic-addon2">Maintnance Date:</span>
    <%= f.date_select :maintnance_date, class: "form-control" %>
    </div><br>
    <div class="input-group">
    <%= f.submit class: "btn btn-primary" %>
      </div>
<%end%>

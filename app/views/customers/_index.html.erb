<% @customers.each do |customer| %>
  <tr>
        <td><%= customer.id %></td>
        <td><%= customer.customer_name %></td>
        <td><%= customer.username %></td>
        <td><%= customer.registration_date %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.address %></td>
        <td><%= customer.gender %></td>
        <td><%= link_to 'View', customer, class: "btn btn-sm btn-success" %></td>
        <td><%= link_to "Edit", edit_customer_path(customer), remote: true, class: "btn btn-default" %></td>
    <td><%= link_to "Delete", customer_delete_path(customer), remote: true, class: "btn btn-danger" %></td>
  </tr>
<% end %>

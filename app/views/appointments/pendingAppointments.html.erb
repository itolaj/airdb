<div class="container"><p></p>
  <%if  current_user.user_role == "Director" || current_user.user_role == "Secretary"  %>
    <div class="well">
    <%= link_to "New Appointment", new_appointment_path, remote: true, class: "btn btn-primary" %>
    <%= render 'searchbar/searchAppointments' %>
  </div>
  <div class="new-appointment"></div>
<%end%>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Customer Name</th>
        <th>Technician Name</th>
        <th>Phone Number</th>
        <th>Appointment type</th>
        <th>Address</th>
        <th>Product Model</th>
        <th>Appointment Date</th>
        <th>Appointment Note</th>
        <th>Appointment Status</th>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody class="appointment-pendingappointments">
      <%= render "pendingAppointments" %>
    </tbody>
  </table>
</div>
<div id="appointment-modal" class="modal fade"></div>

<%= will_paginate @appointments, renderer: BootstrapPagination::Rails %>

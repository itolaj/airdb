<% @appointments.each do |appointment| %>
      <%if appointment.status == "Done" %>
  <tr>
    <td><%= appointment.id %></td>
    <td><%= appointment.customer_name %></td>
    <td><%= appointment.technician_name %></td>
    <td><%= appointment.phone_number %></td>
    <td><%= appointment.appointment_type %></td>
    <td><%= appointment.address %></td>
    <td><%= appointment.product_model %></td>
    <td><%= appointment.appointment_date %></td>
    <td><%= appointment.appointment_note %></td>
    <td><%= appointment.status %></td>
        <td><%= link_to 'View', appointment, class: "btn btn-sm btn-success" %></td>
        <td><%= link_to "Edit", edit_appointment_path(appointment), remote: true, class: "btn btn-default" %></td>
    <td><%= link_to "Delete", appointment_delete_path(appointment), remote: true, class: "btn btn-danger" %></td>
  </tr>
<% end %>
<% end %>

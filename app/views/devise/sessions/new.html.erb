<html>
<head>
</head>
<br>
  <body align="center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-md-4"></div>
        <div class="container" style="margin-top: 30px">
          <div class="col-md-4">
            <div class="login-panel panel panel-default">
              <div class="panel-heading">
                <h1 class="panel-title">Sign In</h1>
              </div>
            <div class="panel-body">
              <form>
                <fieldset>
                  <div class="form-group" >
                    <label for="email">Username or Email</label>
                      <%= f.email_field :email, autofocus: true, class: "form-control"%>
                    </div>
                  <div class="form-group">
                    <label for="pwd">Password</label>
                      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                    </div>
                    <button type="submit" class="btn btn-sm btn-success">Sign in</button>
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <button type="submit" class="btn btn-sm btn-default"><%= link_to "Sign up", new_registration_path(resource_name) %><br /></button>
                  <% end -%>
                </fieldset>
              </form>
            </div><br>
          </div>
        </div>
    <%end%>
  </body>
</html>

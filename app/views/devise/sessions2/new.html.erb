<html>
<head>
</head>
<br>
<body align="center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="col-md-4"></div>
    <div class="col-md-4">
          <div class="container" style="margin-top: 30px">
            <div class="col-md-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title">Sign In</h1>
                    </div>
                    <div class="panel-body">
                        <form>
                            <fieldset>
                                <div class="form-group" >
                                    <label for="email">Username or Email</label>
                                    <%= f.email_field :email, autofocus: true, class: "form-control"%>
                                  </div>
                                <div class="form-group">
                                  <label for="pwd">Password</label>
                                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                                </div>
                                <div class="checkbox">
                                    <label>
                                          <% if devise_mapping.rememberable? -%>
                                          <%= f.check_box :remember_me %>
                                          <%= f.label :remember_me %>
                                          <%end%>
                                </div>
                                <button type="submit" class="btn btn-sm btn-success">Sign in</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <h3> Demo users: </h3>
                  <p> Director - email: airdbapp@gmail.com</p>
                    <p> Secretary - email: secretary@airdb.com</p>
                      <p> Technician - email: technician@airdb.com</p>
                        <p> Password: papertowns <p>
                          <strong><em> Password is the same for all users </em></strong>
            </div>
        </div>
    <% end %>
</body>
</html>
